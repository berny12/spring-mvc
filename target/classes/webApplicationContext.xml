<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">
      
       <!-- se agregar el contexto de la aplicacion -->
       <context:component-scan base-package="com.synergyj.curso.web.services"/>
     
     <!-- para levantar toda la estrucutra del mcv  -->
     <mvc:annotation-driven />
     
     <!--  se agregar el viewresolver para el proyecto -->
     <bean class="org.springframework.web.servlet.view.InternalResourceView">
      	<property name="prefix" value="/WEB-INF/jsp/" />
      	<property name="sufFix" value=".jsp" />
     </bean>
     
</beans>
